<section class='container dashboard-top'>
  <div class='flex flex-col w-full border-opacity-50'>
    <div class='grid rounded-box place-items-center'>
      <h1 class='mt-5 text-center welcome-text'>{{welcomeMessage}}</h1>
    </div>
  </div>
</section>

<main class='container px-4 mx-auto mb-6 prose lg:prose-lg' id='dashboard'>
  <section>
    <div class='your-items'>
      <h2>Your Items:</h2>
      <!-- You can open the modal using ID.showModal() method -->
      <i class='fa fa-plus-square' onclick='my_modal_3.showModal()'></i>
      {{!-- <button class='btn' onclick='my_modal_3.showModal()'>Add Item </button> --}}
      <dialog id='my_modal_3' class='modal modal-bottom sm:modal-middle'>
        <form method='dialog' class='modal-box add-item-form'>
          <i class='fa fa-times close-icon' onclick='my_modal_3.close()'></i>
          <form id='add-item-form' class='space-y-4 add-item-form'>
            <div id='add-item-alert'></div>
            <div class='form-control'>
              <h2>Post an item</h2>
              <label for='item_name' class='input-group add-item-input'>
                <input type='text' placeholder='Item Name' class='input input-bordered add-item-nametxt'
                  id='item_name' />
              </label>
              <label for='item_description' class='input-group add-item-input'>
                <textarea placeholder='Item Description' class='textarea textarea-bordered textarea-md add-item-txtarea'
                  id='item_description'></textarea>
              </label>
              <label for='item_condition' class='input-group add-item-input'>
                <textarea placeholder='Item Condition' class='textarea textarea-bordered textarea-md add-item-txtarea'
                  id='item_condition'></textarea>
              </label>
            </div>
            <div class='add-item-button-div'>
              <button type='submit' class='mt-4 btn add-item-btn'>Add Item</button>
            </div>
          </form>
        </form>
      </dialog>
    </div>
    {{#if ownedItems.length}}
    <div class='grid grid-flow-row gap-8 my-8 text-neutral-600 sm:grid-cols-1 md:grid-cols-2'>
      {{#each ownedItems as |ownedItem|}}
      <div class='p-6 duration-300 bg-white shadow-lg rounded-xl shadow-gray-200 hover:-translate-y-1 feed-card'
        id='item-{{ownedItem.id}}'>
        {{#each ownedItem.requests}}
        {{#ifEqual request_status 'pending'}}
        <div class="indicator"></div>
        <div class="hint"></div>
        {{/ifEqual}}
        {{/each}}
        {{#if this.return}}
        {{#ifEqual this.return.return_status 'pending'}}
        <div class="indicator"></div>
        <div class="hint"></div>
        {{/ifEqual}}
        {{/if}}
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="m-1 btn"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></label>
          <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
            <li><a><i class='delete-button fa fa-trash'></i> Delete item</a></li>
            {{#each this.requests}}
            {{#ifEqual request_status 'pending'}}
            <li>
              <button class='approve-button display-inline' data-item-id='{{item_id}}' data-request-id='{{id}}'
                data-user-id='{{this.user_id}}'>
                <i class="fa fa-check" aria-hidden="true"></i> Approve
              </button>
            </li>
            <li>
              <button class='deny-button display-inline' data-item-id='{{item_id}}' data-request-id='{{id}}'
                data-user-id='{{this.user_id}}'>
                <i class="fa fa-ban" aria-hidden="true"></i> Deny
              </button>
            </li>
            {{/ifEqual}}
            {{/each}}
            {{#if this.return}}
            {{#ifEqual this.return.return_status 'pending'}}
            <li>
              <button class='confirm-return-btn display-inline' data-item-id='{{this.return.item_id}}'
                data-request-id='{{this.return.id}}' data-user-id='{{this.return.user_id}}'>
                <i class="fa fa-check" aria-hidden="true"></i> Confirm Return
              </button>
            </li>
            {{/ifEqual}}
            {{/if}}
          </ul>
        </div>
        <h3 class='mt-0'>{{ownedItem.item_name}}</h3>
        <p>{{ownedItem.item_description}}</p>
        {{#if ownedItem.requests.length}}
        <div class='mt-5 request-container border-top'>
          {{#each ownedItem.requests}}
          {{#ifEqual request_status 'pending'}}
          <span class='rounded-lg borrow-alert-tag'>
            You have a request
          </span>
          {{else ifEqual ../return.return_status 'pending'}}
          <p class='pt-5 dash-card-text border-top'>
            {{this.user.firstName}} sent a return request.
          </p>
          {{else}}
          {{#if this.is_available}}
          <p class='pt-5 dash-card-text border-top'>No requests for this item.</p>
          {{else}}
          <p class='pt-5 borrowed-by dash-card-text'>Borrowed by {{this.user.firstName}}</p>
          {{/if}}
          {{/ifEqual}}
          {{/each}}
        </div>
        {{else}}
        <p class='pt-5 dash-card-text border-top'>No requests for this item.</p>
        {{/if}}
      </div>
      {{/each}}
    </div>
    {{else}}
    <p class='p-5 mb-5 none emptyBox rounded-xl'>You have no items, post one!</p>
    {{/if}}
  </section>

  <section>
    <h2>Items You Borrowed:</h2>
    {{#if borrowedItems.length}}
    <div class='grid grid-flow-row gap-8 my-8 text-neutral-600 sm:grid-cols-1 md:grid-cols-2'>
      {{#each borrowedItems}}
      <div class='p-6 duration-300 bg-white shadow-lg rounded-xl shadow-gray-200 hover:-translate-y-1 feed-card card'
        id='render-add-review'>
        <h3 class='mt-0'>{{this.item_name}}</h3>
        <p>{{this.item_description}}</p>
        <p class='dash-card-text borrowed-from border-top'>
          <span>Borrowed from {{this.owner.firstName}}</span>
          {{#ifEqual this.return.return_status 'pending'}}
          <button class='return-button btn btn-outline btn-xs display-inline' data-item-id={{this.id}} disabled>
            Return Initiated
          </button>
        </p>
        {{else}}
        <button class='return-button btn btn-outline btn-xs display-inline' data-item-id={{this.id}}>
          Initiate Return
        </button>
        </p>
        <div class="review-wrapper" id="review-wrapper-{{this.id}}"></div>
        {{/ifEqual}}
      </div>
      {{/each}}
    </div>
    {{else}}
    <p class='p-5 none emptyBox rounded-xl'>No borrowed items.</p>
    {{/if}}
  </section>



</main>

<script src='/js/dashboard.js' data-user-id='{{currentUser.id}}'></script>